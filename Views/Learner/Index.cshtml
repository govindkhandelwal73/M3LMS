                                                <div class="media media-responsive course-list">
                                                    <div class="media-body mb-xs-12">
                                                        <div class="row">
                                                            <div ng-if="filter_by == helper.dashboard_filters.enrolled_courses" class="ng-scope">
                                                                <div class="col-xs-6 col-sm-3 col-lg-3 two-lines-info">
                                                                    <p class="ng-binding">Status</p>
                                                                    <div> <strong class="ng-binding">New</strong> </div>
                                                                </div>
                                                                <div class="col-xs-6 col-sm-3 two-lines-info mb-xs-6 ng-scope" ng-if="course.only_contains_sessions == 0">
                                                                    <p class="ng-binding">Content</p>
                                                                    <div> <a href="/enrollments/6439870/content"> <strong class="ng-binding">@item.Description</strong> </a> </div>
                                                                </div>
