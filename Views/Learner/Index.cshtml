@{
    Layout = "~/Views/Shared/_LayoutLearner.cshtml";
}
}
@model M3LMS.ViewModels.Learner


<section class="vbox">
    <section id="content">
        <section class="vbox">
            <section class="scrollable wrapper-lg">
                <div class="row">
                    <p class="lead heading">Courses </p>
                    <div class="col-sm-9 pad-0 white-bg">
