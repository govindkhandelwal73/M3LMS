@using (Html.BeginForm("Index", "PageSettings", FormMethod.Post))
{

    <div class="panel">
        <div class="panel-body">
            <div class="page-heading">
                <h2 class="pull-left">Create User</h2>
            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Background Color<span class="form-colon">:</span></label>
                    <div class="col-sm-6">
                        <input type="color" id="clr" name="clr" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Company Name <span class="form-colon">:</span></label>
                    <div class="col-sm-6">
                        @Html.TextBox("Name1",null, new { @class = "form-control", @placeholder = "Enter Company Name " })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Header Text <span class="form-colon">:</span></label>
                    <div class="col-sm-6">
                        @Html.TextBox("Name2",null, new { @class = "form-control", @placeholder = "Enter Header Text " })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label"></label>
                    <div class="col-sm-6">
                        <input type="submit" value="Submit" class="btn btn-primary"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
            
            }
