
@model M3LMS.Models.ref_department

<script src="~/Scripts/js/jquery-1.11.3.min.js"></script>
<script src="~/Scripts/jquery-1.7.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<style>
        .my-table input {
            display: block;
            width: 100%;
            height: 34px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 0;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        }

        .table-no-hover tr:hover td {
            background-color: transparent;
        }
    </style>

@using (Html.BeginForm("EditDepartment", "Dep", FormMethod.Post, new { id = "frm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    

    <div id="content">
        <div class="panel">
            <div class="panel-body">
                <div class="page-heading">
                    <h2 class="pull-left">Edit Department</h2>
                </div>
                <div class="form-horizontal ">
                    <div class="form-group" style="display:none">
                        <label class="col-sm-2 control-label">Department Id<span class="form-colon">:</span></label>
                        <div class="col-sm-6"> 
                            @Html.HiddenFor(model => model.DeptId)
                            @Html.ValidationMessageFor(model => model.DeptId)                           
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Department Name<span class="form-colon">:</span></label>
                        <div class="col-sm-6"> 
                            @Html.TextBoxFor(model => model.DeptName, null, new { @class = "form-control", @required = "true", @type="text" })
                            @Html.ValidationMessageFor(model => model.DeptName)                           
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Strength<span class="form-colon">:</span></label>
                        <div class="col-sm-6"> 
                            @Html.TextBoxFor(model => model.Strength, null, new { @class = "form-control", @required = "true", @type="text" })
                            @Html.ValidationMessageFor(model => model.Strength)                           
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Location<span class="form-colon">:</span></label>
                        <div class="col-sm-6"> 
                            @Html.TextBoxFor(model => model.Location, null, new { @class = "form-control", @required = "true", @type="text" })
                            @Html.ValidationMessageFor(model => model.Location)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Phone No.<span class="form-colon">:</span></label>
                        <div class="col-sm-6"> 
                            @Html.TextBoxFor(model => model.PhoneNo, null, new { @class = "form-control", @required = "true", @type="text" })
                            @Html.ValidationMessageFor(model => model.PhoneNo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Discription<span class="form-colon">:</span></label>
                        <div class="col-sm-6"> 
                            @Html.TextBoxFor(model => model.Description, null, new { @class = "form-control", @required = "true", @type="text" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">&nbsp;</label>
                        <div class="col-sm-6">
                            <input type="button" id="Edit" name="Edit" class="btn btn-primary" value="Save" />
                            |
                            @Ajax.ActionLink("Cancel", "CreateDepartment", "Dep", new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "content_wrpr", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
   
      $(document).ready(function()
      {
          $('#Edit').click(function () {
              var url = "/Dep/EditDepartment";
              var form = $("#frm");
              var deptid = $("#DeptId").val();
              var formData = form.serialize();
              $.post(url, formData, function (data) {
                  $("#content_wrpr").html(data);
                 
              });
          })
      })
         
</script>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
