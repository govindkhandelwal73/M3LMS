@{
    ViewBag.Title = "AssignedCourseList";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h2>LearnerList</h2>
@model M3LMS.ViewModels.Learner

<script src="../../Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script src="~/Scripts/js/bootstrap.min.js"></script>
<link href="~/Content/css/bootstrap.css" rel="stylesheet" />
<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />



<!-- Alert -->
<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/jquery-ui.min.js"></script>
<link href="~/Content/css/popup/alert.min.css" rel="stylesheet" />
<script src="~/Content/css/popup/alert.min.js"></script>
<link href="~/Content/css/popup/theme.min.css" rel="stylesheet" />

<style>
    .status-box {
        float: left;
        position: relative;
        top: 6px;
    }
</style>
<div id="content">
    <div class="panel">
        <div class="panel-body">
            <div class="page-heading">
                <h2 class="pull-left">Create Mapping</h2>
            </div>
            @using (Html.BeginForm(new { id = "frm" }))
            {
                @Html.HiddenFor(model=>model.EmailId)
                @Html.HiddenFor(model=>model.Name)
                 @Html.HiddenFor(model=>model.DepartmentId)
                //@Html.ValidationSummary(false)
                <div class="form-horizontal form-wrpr">

                    <div class="form-group">
                        
                        <div class="col-sm-10">
                            <table>
                                <tr>
                                    <td>Name :</td>
                                    <td></td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td>Email Id :</td>
                                    <td></td>
                                    <td>@Model.EmailId</td>
                                </tr>
                                <tr>
                                    <td>
                                        Select Course :
                                    </td>
                                    <td></td>
                                    <td>
                                        @Html.ListBoxFor(model => model.SelectedCourseIdlist, ViewBag.CourseLists as MultiSelectList, new { @class = "form-control", @required = "true", validate = "true" })
                                        @Html.ValidationMessageFor(model => model.CourseId, "Please Select the Department")
                                    </td>
                                </tr>

                            </table>
                            <input type="submit" name="command" value="Save" class="btn btn-primary">
                        </div>
                    </div>
                </div>
            }




        </div>

    </div>
</div>




<script type="text/javascript">
    $(document).ready(function () {
        $('.my-table').DataTable();
    });
</script>
<script src="~/Scripts/js/Sortable/jquery.dataTables.min.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js" type="text/javascript"></script>
<script src="http://ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js" type="text/javascript"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-ui-1.8.20.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/js/DateValidator.js"></script>

<script type="text/javascript">
    $(function () {
        $("#txtCreateDate").datepicker({
            changeMonth: true,
            changeYear: true
        });
    });
</script>
